doctype html
html
  head
      block head
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/navBar.css')
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

        //- script(src='/javascripts/search.js' type='module')
        title ShowMe - #{title}
  body
    div(class='container')
      div(class='navBar')
        div(class='navbar-left')
          div(class='logo')
            a(href='/' class='show') 
              span(class='show') Show
              span(class='me') Me
            //- a(href='/' class='me') Me
          div(class='search')
            form(action='/search' method='post' role='search' class='search-button search')
              input(type='text' placeholder='    Search Shows' id='search-input' name='searchInput' class='search')
              button(type='submit' id='search-btn' class='search-btn')
                a( class="fa fa-search")
                //- <i class="fa-solid fa-magnifying-glass"></i>
                //- span(class='material-icons-outlined') search
                //- md-icon(class="material-icons-outlined")
          


              //- button(type='submit' id='search-btn' class='search') Search
        div(class='navbar-right')
          if user
            div(class='myshow-dev')
              a(href='/showshelves' class='myShowShelf') My ShowShelves
            form(method='post' action='/users/logout' class='logout-form')
              button(type='submit' class='logout-button') Logout
          else 
            a(href='/users/login' class='login') Login
            a(href='/users/signup' class='signup') Signup
    block content
