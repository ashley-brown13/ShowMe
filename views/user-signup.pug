extends layout.pug
include utils.pug
block content
    link(rel="stylesheet", href="/stylesheets/user-signup.css")
    +validationErrorSummary(errors)
    div(class="signUpParentDiv")
        div(class='signupFormDiv')
            form(action="/users/signup", method="post" class='formDiv')
                input(type="hidden" name='_csrf' value=csrfToken)
                div(class="fullNameField")
                    +field('Full Name', 'fullName', user.fullName, 'text', 'Full Name')
                div(class='emailField')
                    +field('Email', 'email', user.email, 'email', 'you@yours.com')
                div(class='passwordField')
                    +field('Password', 'password', '', 'password')
                div
                    button(type="submit" class="submitButton") Sign Up
            form(action="/users/demo", method="post" class="demoUser")
                input(type="hidden" name="fullName" value="Demo")
                button(type="submit") Demo ShowMe
            div(class="login")
                span Already a member?
                a(href='/users/login') Sign In
