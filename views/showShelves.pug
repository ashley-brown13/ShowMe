extends layout

block content
  table
    thead
      tr
        th ShowShelf
        th Edit
        th Delete
    tbody
      each showShelf in showShelves
        tr
          td= showShelf.title
          td: button(type="button") Edit
          td: button(type="button") Delete
  div
    form(action='/showshelves' method='post')
      input(type='hidden' name='_csrf' value=csrfToken)
      label(for="shelfAdd") Want to add a new shelf?
      input(type='text' name="shelfAdd" placeholder='Title of Shelf')
      button(type='submit') Add
