extends layout.pug 
include utils.pug
block content 
    form(action="/user/register", method="post") 
        input(type="hidden" name='_csrf' value=csrfToken)
        +field('Full Name', 'fullName', user.fullName, 'text', 'Full Name')
        +field('Email', 'email', user.email, 'email', 'you@yours.com')
        +field('Password', 'password', '', 'password')
        div 
            button(type="submit") Sign Up

    

