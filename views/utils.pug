mixin field(labelText, fieldName, fieldValue, fieldType = 'text', placeholder = null)
    div
        label(for=fieldName)=labelText
        input(type=fieldType id=fieldName name=fieldName value=fieldValue placeholder=placeholder)

mixin validationErrorSummary(errors)
    if errors
        p The following error(s) have been found:
        ul
            each error in errors
                li= error
mixin stars()
     p(class="background") Rate Show:
        div(class="container-stars")
